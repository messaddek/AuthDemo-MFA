<!-- Pages/Shared/_LoginPartial.cshtml -->
<ul class="navbar-nav">
    @if (User.Identity?.IsAuthenticated ?? false)
    {
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle text-dark" href="#" id="navbarDropdown" role="button"
                data-bs-toggle="dropdown" aria-expanded="false">
                Hello @User.Identity?.Name!
            </a>
            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                <li><a class="dropdown-item" asp-page="/Account/ManageProfile">Profile</a></li>
                <li><a class="dropdown-item" asp-page="/Account/ChangePassword">Change Password</a></li>
                <li><a class="dropdown-item" asp-page="/Account/ManageMfa">Security Settings</a></li>
                <li>
                    <hr class="dropdown-divider">
                </li>
                <li>
                    <form class="form-inline" asp-page="/Account/Logout" method="post">
                        <button type="submit" class="dropdown-item">Logout</button>
                    </form>
                </li>
            </ul>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-page="/Account/Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-page="/Account/Login">Login</a>
        </li>
    }
</ul>